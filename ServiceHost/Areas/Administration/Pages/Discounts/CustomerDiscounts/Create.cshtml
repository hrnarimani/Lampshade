@page
@using Microsoft.EntityFrameworkCore
@model ServiceHost.Areas.Administration.Pages.Discounts.CustomerDiscounts.CreateModel
@{
}



<div class="modal-header">
    
    <h4 class="modal-title">ایجاد  تخفیف مشتری </h4>
</div>
@if (Model.SuccessMessageame != null)
{
    <div class="alert alert-success">
        @Model.SuccessMessageame

    </div>
}
    @if (Model.ErrorMessageame != null)
    {
        <div class="alert alert-danger">
            @Model.ErrorMessageame

        </div>
    }

<form method="post"  asp-page-handler="Create">
    <div class="modal-body">
        <div class="row">
          
            <div class="form-group">
                        <label class="sr-only" asp-for="Command.ProductId"></label>
                        <select class="form-control" asp-for="Command.ProductId" asp-items="Model.Products">
                            
                          <option value="0" >انتخاب محصول</option>

                        </select> 
                <span asp-validation-for="Command.ProductId " class="error"></span>
            </div>
			
			  <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Command.DiscountRate " class="control-label">میزان تخفیف </label>
                    <input type="text" class="form-control" asp-for="Command.DiscountRate " >
                    <span asp-validation-for="Command.DiscountRate " class="error"></span>
                </div>
            </div>
   
        </div>
        
        <div class="row">
            
            <div class="col-md-6">
                <div class="form-group">
                    <label class="sr-only"  asp-for="Command.StartDate">تاریخ شروع </label>
                    <input class="form-control persianDateInput" asp-for="Command.StartDate" placeholder=" تاریخ شروع">
                    <span asp-validation-for="Command.StartDate " class="error"></span>
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="form-group">
                    <label class="sr-only"  asp-for="Command.EndDate">تاریخ پایان </label>
                    <input class="form-control persianDateInput" asp-for="Command.EndDate" placeholder=" تاریخ پایان">
                    <span asp-validation-for="Command.EndDate " class="error"></span>
                </div>
            </div>
       

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="@Model.Command.Reason" class="control-label">دلیل تخفیف</label>
                    <input type="text" class="form-control" asp-for="@Model.Command.Reason" accept="image/*">
                    <span class="error"></span>
                </div>
            </div>
        </div>
        
    </div>
    <div class="modal-footer">
        
        <button type="submit" class="btn btn-info waves-effect waves-light" >ایجاد</button>
    </div>
    </div>
</form>


