@page
@using Microsoft.EntityFrameworkCore
@model ServiceHost.Areas.Administration.Pages.Inventory.OperationLogModel
@{
}




<div class="modal-header">
    
    <h4 class="modal-title">سوابق گردش  انباری </h4>
</div>
@if (Model.SuccessMessageame != null)
{
    <div class="alert alert-success">
        @Model.SuccessMessageame

    </div>
}
@if (Model.ErrorMessageame != null)
{
    <div class="alert alert-danger">
        @Model.ErrorMessageame

    </div>
}

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>#</th>
        <th>تعداد</th>
        <th>تاریخ</th>
        <th>عملیات</th>
        <th>موجودی فعلی</th>
        <th>عملگر</th>
        <th>توضیحات</th>

    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Command)
    {
        <tr class="text-white @(item.Operation ? "bg-success" : "bg-danger")">
            <td>@item.Id</td>
            <td>@item.Count</td>
            <td>@item.OperationDate </td>
            <td>
                @if (item.Operation)
                {
                    <span>افزایشی</span>
                }
                else
                {
                    <span>کاهشی</span>
                }
            </td>
            <td>@item.CurrentCount</td>
            <td>@item.Operator </td>
            <td>@item.Description  </td>

            
                
        </tr>
    }
    
   
    
       
   
    </tbody>
   
   
</table>

<div>
    <a class="btn btn-warning  waves-effect waves-light pull-right m-rl-5">
        <a  asp-page="./Index" > بازگشت </a>
    </a>
</div>


