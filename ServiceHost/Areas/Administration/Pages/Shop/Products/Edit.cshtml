@page 
@using Microsoft.EntityFrameworkCore
@model ServiceHost.Areas.Administration.Pages.Shop.Products.EditModel
@{
}


<div class="modal-header">
  
    <h4 class="modal-title">ویرایش  محصول </h4>
</div>


<form method="post" asp-page-handler="Edit" enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.Command.Name" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="@Model.Command.Name" >
                    <span asp-validation-for="@Model.Command.Name" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Command.Code  " class="control-label">کد محصول</label>
                    <input type="text" class="form-control" asp-for="Command.Code ">
                    <span asp-validation-for="Command.Code " class="error"></span>
                </div>
            </div>

        </div>

        <div class="row">

            

            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Command.CategoryId " class="control-label">گروه محصول </label>
                    <select class="form-control" asp-for="Command.CategoryId" asp-items="Model.ProductCategories">
                        <option value="0">انتخاب دسته بندی</option>

                    </select>
                    <span asp-validation-for="Command.CategoryId " class="error"></span>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="@Model.Command.Picture" class="control-label">عکس</label>
                    <input type="file" class="form-control" asp-for="@Model.Command.Picture" accept="image/*">
                    <span class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Command.PictureAlt" class="control-label">توضیحات عکس</label>
                    <input type="text" class="form-control" asp-for="Command.PictureAlt">
                    <span class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.Command.PictureTitle" class="control-label">  عنوان عکس</label>
                    <input type="text" class="form-control" asp-for="@Model.Command.PictureTitle">
                    <span class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="@Model.Command.ShortDescription" class="control-label"> توضیحات مختصر</label>
                    <textarea class="form-control autogrow" asp-for="@Model.Command.ShortDescription" onchange="fillField('ShortDescription', 'MetaDescription')"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span class="error"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="@Model.Command.Description" class="control-label">توضیحات</label>
                    <textarea class="form-control autogrow" asp-for="@Model.Command.Description"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Command.KeyWords" class="control-label">کلمات کلیدی</label>
                    <input type="text" class="form-control" asp-for="Command.KeyWords">
                    <span asp-validation-for="Command.KeyWords" class="error"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Command.Slug" class="control-label">اسلاگ</label>
                    <input type="text" class="form-control" asp-for="Command.Slug">
                    <span class="error"></span>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="Command.MetaDescription" class="control-label">توضیحات متا</label>
                    <textarea class="form-control autogrow" asp-for="Command.MetaDescription"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="Command.MetaDescription" class="error"></span>
                </div>
            </div>
        </div>
    </div>
       
        

        <input type="hidden" asp-for="Command.Id" value="@Model.Command.Id " />

    
    <div class="modal-footer">
        
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>
